<Window x:Class="PersonalAiAssistant.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Personal AI Assistant" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="/Resources/icon.ico">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D3748" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Personal AI Assistant" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <Border Background="#48BB78" CornerRadius="10" Padding="8,4" Margin="15,0,0,0">
                        <TextBlock x:Name="StatusIndicator" Text="Offline Voice: Ready" Foreground="White" FontSize="12"/>
                    </Border>
                </StackPanel>
                
                <Button Grid.Column="1" Content="Settings" Click="SettingsButton_Click" Margin="0,0,10,0"/>
                <Button Grid.Column="2" Content="Minimize" Click="MinimizeButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Chat Area -->
            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Chat History -->
                <Border Grid.Row="0" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="5">
                    <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ChatHistory" Padding="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,5" Padding="10" CornerRadius="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#F7FAFC"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                    <Setter Property="Background" Value="#007ACC"/>
                                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                                </DataTrigger>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Sender}" FontWeight="Bold" FontSize="12" Opacity="0.7">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#4A5568"/>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" Margin="0,2,0,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#2D3748"/>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}"
                                                     FontSize="10" Opacity="0.6" HorizontalAlignment="Right">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#718096"/>
                                                        <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
                
                <!-- Input Area -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="MessageInput" Grid.Column="0" 
                             PlaceholderText="Type your message or use voice command..."
                             KeyDown="MessageInput_KeyDown"/>
                    <Button Grid.Column="1" Content="Send" Click="SendButton_Click" Margin="5,0,0,0"/>
                </Grid>
            </Grid>
            
            <!-- Sidebar -->
            <Border Grid.Column="1" BorderBrush="#E2E8F0" BorderThickness="1,0,0,0" Padding="10">
                <StackPanel>
                    <!-- Prayer Times Widget -->
                    <Border Background="#EDF2F7" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Next Prayer" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                            <TextBlock x:Name="NextPrayerName" Text="Maghrib" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock x:Name="NextPrayerTime" Text="18:45" FontSize="20" FontWeight="Bold" Foreground="#007ACC"/>
                            <TextBlock x:Name="TimeRemaining" Text="in 2h 15m" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Microsoft To-Do Widget -->
                    <Border Background="#EDF2F7" CornerRadius="5" Padding="10">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="To-Do List" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                <Button Content="Refresh" FontSize="10" Padding="5,2" HorizontalAlignment="Right" Click="RefreshTodoButton_Click"/>
                            </Grid>
                            
                            <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="TodoList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,2" Padding="5" Background="White" CornerRadius="3">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <CheckBox Grid.Column="0" IsChecked="{Binding IsCompleted}" VerticalAlignment="Top" Margin="0,2,5,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Title}" FontSize="12" TextWrapping="Wrap">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                        <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                        <Setter Property="Opacity" Value="0.6"/>
                                                                    </DataTrigger>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <TextBlock Text="{Binding DueDate, StringFormat='Due: {0:MMM dd}'}" 
                                                                 FontSize="10" Opacity="0.7" 
                                                                 Visibility="{Binding DueDate, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F7FAFC" Padding="10" BorderBrush="#E2E8F0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Voice Status:" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Ellipse x:Name="VoiceStatusIndicator" Width="10" Height="10" Fill="#48BB78" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="VoiceStatusText" Text="Ready" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" x:Name="ConnectionStatus" Text="Online" FontSize="12" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>